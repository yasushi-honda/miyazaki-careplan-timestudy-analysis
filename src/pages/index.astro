import Layout from '../layouts/Layout.astro';
import { getCsvData } from '../data/csvDataJson.js';

// 個人データと事業所データの両方を読み込む
const individualBeforeData = getCsvData('individual_before.csv');
const individualAfterData = getCsvData('individual_after.csv');
const businessBeforeData = getCsvData('business_before.csv');
const businessAfterData = getCsvData('business_after.csv');

// 主要な統計データを計算
const calculateAverageTime = (data, key) => {
  if (!data || data.length === 0) return 0;
  const sum = data.reduce((acc, row) => acc + (parseInt(row[key]) || 0), 0);
  return Math.round(sum / data.length);
};

// 個人データの平均時間
const avgBeforeCreationTime = calculateAverageTime(individualBeforeData, "1ヶ月あたりの提供票作成時間（分）");
const avgAfterCreationTime = calculateAverageTime(individualAfterData, "1ヶ月あたりの提供票作成時間（分）");
const creationTimeReduction = avgBeforeCreationTime - avgAfterCreationTime;
const creationTimeReductionPercent = Math.round((creationTimeReduction / avgBeforeCreationTime) * 100);

const avgBeforeConfirmationTime = calculateAverageTime(individualBeforeData, "1ヶ月あたりの実績確認時間（分）");
const avgAfterConfirmationTime = calculateAverageTime(individualAfterData, "1ヶ月あたりの実績確認時間（分）");
const confirmationTimeReduction = avgBeforeConfirmationTime - avgAfterConfirmationTime;
const confirmationTimeReductionPercent = Math.round((confirmationTimeReduction / avgBeforeConfirmationTime) * 100);

const avgBeforeModificationTime = calculateAverageTime(individualBeforeData, "利用者からのケアプラン修正依頼を受けてから修正完了までに要する時間（分）");
const avgAfterModificationTime = calculateAverageTime(individualAfterData, "利用者からのケアプラン修正依頼を受けてから修正完了までに要する時間（分）");
const modificationTimeReduction = avgBeforeModificationTime - avgAfterModificationTime;
const modificationTimeReductionPercent = Math.round((modificationTimeReduction / avgBeforeModificationTime) * 100);

// システム利用率の計算
const countSharingMethods = (data) => {
  const counts = { "システム": 0, "その他": 0, "total": 0 };
  
  if (!data || data.length === 0) return counts;
  
  data.forEach(row => {
    const method = row["ケアプラン共有方法"] || row["共有方法"];
    if (method === "システム") {
      counts["システム"]++;
    } else {
      counts["その他"]++;
    }
    counts["total"]++;
  });
  
  return counts;
};

const beforeMethods = countSharingMethods(businessBeforeData);
const afterMethods = countSharingMethods(businessAfterData);

const beforeSystemPercent = Math.round((beforeMethods["システム"] / beforeMethods["total"]) * 100) || 0;
const afterSystemPercent = Math.round((afterMethods["システム"] / afterMethods["total"]) * 100) || 0;
const systemAdoptionIncrease = afterSystemPercent - beforeSystemPercent;

// 総合的な時間削減効果（月間）
const totalMonthlyTimeSaved = creationTimeReduction + confirmationTimeReduction;

